<body class="show_page">
  <h3><%= "Reviewer: #{@user.name}" %></h3>

  <% @user.reviews.each do |review| %>
  <div id="card-body" class="ui card">
  <ul>
    <div class="header">
      <li><%= "Book Reviewed: #{review.book.title}" %></li>
    </div>
    <br>
    <li><%= "Review Title: #{review.title}" %></li>
    <br>
    <li><%= "Review: #{review.description}" %></li>
    <br>
    <li><%= "Rating: #{review.rating}" %></li>
    <br>
    <br>
  </ul>
  <br>
  <div class="ui basic brown button">
  <%= link_to "Delete Review", review_path(review), method: :delete %>
  </div>
  <br>
</div>
  <% end %>
</body>
